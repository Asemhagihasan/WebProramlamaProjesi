<!DOCTYPE html>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<html lang="en">
<head>
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proje_B201210567</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/style.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proje_B201210567.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="sha384-rbs5EUdDQ5Ks1L4rccnvgeMO9gF+GmMAWqtZOxLcA/EHRScBKnK7Lh4+8N4uPkz" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.9.0/dist/css/bootstrap-datepicker.min.css" integrity="sha384-FJSY7e84HXMCU3qqbZWG9TogC5DwZOv4tZntu1ZnStqPuhhmXC8EcXNUn5e3Jum" crossorigin="anonymous">
   
</head>
<body>
   
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Admin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">

                    <ul class="navbar-nav me-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Admin</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="Admin" asp-action="Index">@localizer["Admins"]</a>
                                <a class="dropdown-item" asp-controller="Admin" asp-action="Create">@localizer["Add Admin"]</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Kullanci" asp-action="Kullancilar">
                                @localizer["Patients"]
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">@localizer["Polyclinic"]</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="Poliklinik" asp-action="PoliklinikGet">@localizer["Polyclinics"]</a>
                                <a class="dropdown-item" asp-controller="Doktor" asp-action="DoktorEkle">@localizer["Add Doctor"]</a>
                            </div>
                        </li>
                       @*  <li class="nav-item">
                            <a class="nav-link" asp-controller="Doktor" asp-action="DoktorListesi">Doktorlar</a>
                        </li> *@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">@localizer["Reservation"]</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">@localizer["Make Reservation"]</a>
                                <a class="dropdown-item" href="#">@localizer["Reservation List"]</a>
                            </div>
                        </li>
                    </ul>
                    <partial name="LanguagePartial"></partial>
                    <a class="btn btn-success my-2 my-sm-0">@localizer["Login"]</a>
                </div>
            </div>
        </nav>
    </header>
    l
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
   

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



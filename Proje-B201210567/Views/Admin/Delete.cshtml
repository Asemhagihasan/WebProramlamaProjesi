@model Admin
<form method="post" asp-controller="Admin" asp-action="Deleted">
	<input asp-for="Id" type="hidden" />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Hasta Silme</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Tc"></label>
			<input asp-for="Tc" type="text" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Adi"></label>
			<input asp-for="Adi" type="text" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Soyad"></label>
			<input asp-for="Soyad" type="text" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="TelefonNumarasi"></label>
			<input asp-for="TelefonNumarasi" type="number" disabled class="form-control" />
		</div>

		<div class="mb-3">
			<label asp-for="Email"></label>
			<input asp-for="Email" type="email" class="form-control" disabled placeholder="email@example.com" />
		</div>
		<div class="mb-3">
			<label asp-for="Sifre"></label>
			<input asp-for="Sifre" type="password" class="form-control" />
		</div>

		<button type="submit" class="btn btn-danger" style="width:150px">Sil</button>
	</div>
</form>
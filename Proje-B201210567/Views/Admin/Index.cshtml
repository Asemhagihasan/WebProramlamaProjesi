@model List<Admin>
@{
    var adminler = (from x in Model orderby x.Id select x).ToList();
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Adminler Listesi</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Admin" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Admin Ekle
            </a>
        </div>
    </div>
</div>
<br />




<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr class="bg-body-secondary">
            <th>
                Tc
            </th>
            <th>
                Adi
            </th>
            <th>
                Soyad
            </th>
            <th>
                Telefon Numarasi
            </th>
            <th>
                Email
            </th>
            <th>
                Sifre
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in adminler)
        {
            <tr>
                <td>
                    @obj.Tc
                </td>
                <td>
                    @obj.Adi
                </td>
                <td>
                    @obj.Soyad
                </td>
                <td>
                    @obj.TelefonNumarasi
                </td>
                <td>
                    @obj.Email
                </td>
                <td>
                    @obj.Sifre
                </td>
                <td>
                    <div class="w-75 btn-group " role="group">
                        <a asp-controller="Admin" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning mx-2"><i class="bi bi-pencil-square"></i> &nbsp; Güncel</a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group " role="group">
                        <a asp-controller="Admin" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>&nbsp; Sil</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <ul class="pagination">
        <li class="page-item disabled">
            <a class="page-link" href="#">&laquo;</a>
        </li>
        <li class="page-item active">
            <a class="page-link" href="#">1</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">2</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">3</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">4</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">5</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">&raquo;</a>
        </li>
    </ul>
</div>
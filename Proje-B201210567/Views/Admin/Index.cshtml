@model List<Kullanci>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Adminler Listesi</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Admin" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Admin Ekle
            </a>
        </div>
    </div>
</div>
<br />




<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr class="bg-body-secondary">
            <th>
                Tc
            </th>
            <th>
                Adi
            </th>
            <th>
                Soyad
            </th>
            <th>
                Telefon Numarasi
            </th>
            <th>
                Email
            </th>
            <th>
                Sifre
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Tc
                </td>
                <td>
                    @obj.Kullanci_Adi
                </td>
                <td>
                    @obj.Kullanci_Soyad
                </td>
                <td>
                    @obj.TelefonNumarasi
                </td>
                <td>
                    @obj.Email
                </td>
                <td>
                    <div class="w-75 btn-group " role="group">
                        <a asp-controller="Admin" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning mx-2"><i class="bi bi-pencil-square"></i> &nbsp; Güncel</a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group " role="group">
                        <a asp-controller="Admin" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>&nbsp; Sil</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

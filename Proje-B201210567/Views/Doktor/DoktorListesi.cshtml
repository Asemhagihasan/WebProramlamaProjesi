@model List<Doktor>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Doktorlar Listesi</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Kullanci" asp-action="KullanciEkleme" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Doktor Ekle
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr class="bg-body-secondary">
            <th>
                Id
            </th>
            <th>
                Tc
            </th>
            <th>
                Adi
            </th>
            <th>
                Soyad
            </th>
            <th>
                Telefon Numarası
            </th>
            <th>
                Email
            </th>
            <th>
                Bölüm İd
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.DoktorId
                </td>
                <td>
                    @obj.Tc
                </td>
                <td>
                    @obj.Doktor_Adi
                </td>
                <td>
                    @obj.Doktor_Soyad
                </td>
                <td>
                    @obj.TelefonNumarasi
                </td>
                <td>
                    @obj.Email
                </td>
                <td>
                    @obj.poliklinikBolum_Id
                </td>
                <td>
                    <div class="w-75 btn-group " role="group">
                        <a asp-controller="Kullanci" asp-action="KullanciGuncel" asp-route-id="" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> &nbsp; Güncel</a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group " role="group">
                        <a asp-controller="Kullanci" asp-action="KullanciSilme" asp-route-id="" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>&nbsp; Sil</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@model List<CalismaSaatlarGroup>

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<style>
    .card {
        box-shadow: 0 20px 27px 0 rgb(0 0 0 / 5%);
    }
    .avatar.sm {
        width: 2.25rem;
        height: 2.25rem;
        font-size: .818125rem;
    }
    .table-nowrap .table td, .table-nowrap .table th {
        white-space: nowrap;
    }
    .table>:not(caption)>*>* {
/*         padding: 0.75rem 1.25rem; */
        border-bottom-width: 1px;
    }
    table th {
        font-weight: 600;
/*         background-color: #eeecfd !important; */
    }

    .tarih{
        width:7rem;
        height:2rem;
        border:solid 1px #eee;
        border-radius:1rem;
        background-color: #0dcaf0;
        text-align:center;
        color:#fff;
        cursor:pointer;
        display:inline-block;
    }

    .tarihContainer{
        display:flex;
        flex-direction:column;
        gap:5px;
    }

    .text-tarih{
        font-weight:bold;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-12 mb-3 mb-lg-5">
            <div class="overflow-hidden card table-nowrap table-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <button class="btn btn-success p-2">Arama Filtereme</button>
                </div>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead class="table small text-uppercase bg-body text-muted">
                        </thead>
                        <tbody>
                            @foreach(var obj in Model){

                                @foreach (var item in obj.CalismaSaatiListesi)
                                {
                                    <tr class="align-middle">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-star me-3"></i>
                                                <img src="https://png.pngtree.com/png-vector/20191130/ourmid/pngtree-doctor-icon-circle-png-image_2055257.jpg" class="avatar sm rounded-pill me-3 flex-shrink-0" alt="Customer">
                                                <div>
                                                    <div class="h6 mb-0 lh-1">@obj.DoctorName @obj.DoktorSoyad</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="tarihContainer">
                                                <span class="text-tarih">En Yakın Tarihi</span>
                                                <div class="tarih"></div>
                                            </div>
                                        </td>
                                        <td> <span class="d-inline-block align-middle"><i class="bi bi-h-circle me-2"></i>Saü Sakarya</span></td>
                                        <td><span><i class="bi bi-hospital me-2"></i>@obj.BolumAdi</span></td>
                                        <td>
                                            <a asp-controller="Randevu" asp-action="CalismaSaatiGoster" style="text-decoration:none; color:#157347">
                                                <i class="bi bi-plus-circle "></i> &nbsp;
                                            </a>
                                        </td>

                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@model CalismaSaati
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header ">
                <h4 class="card-title">Randevu Al</h4>
            </div>
            <!-- ./card-header -->
            <div class="card-body p-0">
                <table class="table table-hover">
                    <tbody>
                        @for (int i = 0; i <= (@Model.BitisSaati.Hours - @Model.BaslangicSaati.Hours); i++)
                        {
                            if (@Model.BaslangicSaati.Hours + i == 12) { continue; }
                            <tr data-widget="expandable-table" aria-expanded="false">
                                <td>
                                    <i class="bi bi-chevron-right"></i>
                                    @DateTime.Today.AddHours(Model.BaslangicSaati.Hours + i).ToString("HH:mm")
                                </td>
                            </tr>
                            <tr class="expandable-body">
                                <td>
                                    <div class="p-0">
                                        <table class="table table-hover">
                                            <tbody>
                                                <tr data-widget="expandable-table" aria-expanded="false">
                                                    <td>
                                                        <i class="expandable-table-caret fas fa-caret-right fa-fw"></i>
                                                        <button class="btn btn-info"> 08:35</button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>

